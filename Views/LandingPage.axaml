<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="JTE.Views.LandingPage"
             xmlns:vm="using:JTE.ViewModels">
    <UserControl.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold"/> 
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>
    </UserControl.Styles>
    
    <StackPanel>
        <TextBlock Classes="h1">Novel Scraper Json Converter</TextBlock>
        <StackPanel>
            <TextBlock>Sorry for the issues with the Novel Scraper, it is being fixed.</TextBlock>
            <TextBlock> This program converts the chapters.json file that is left behind and converts it to an EPub</TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
